<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Cross-Browser Suite" verbose="1">

    <test name="Chrome Tests" parallel="methods" thread-count="10">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="false"/>
        <classes>
            <class name="tests.HomePageTests"/>
            <class name="tests.ProductsPageTests"/>
        </classes>
    </test>

    <test name="Firefox Tests" parallel="methods" thread-count="10">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="false"/>
        <classes>
            <class name="tests.HomePageTests"/>
            <class name="tests.ProductsPageTests"/>
        </classes>
    </test>

    <test name="Edge Tests" parallel="methods" thread-count="10">
        <parameter name="browser" value="edge"/>
        <parameter name="headless" value="false"/>
        <classes>
            <class name="tests.HomePageTests"/>
            <class name="tests.ProductsPageTests"/>
        </classes>
    </test>
</suite>