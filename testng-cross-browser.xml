<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Cross-Browser Suite" verbose="1" parallel="tests" thread-count="3">

    <test name="Firefox Tests" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="tests.HomePageTests"/>
            <class name="tests.ProductsPageTests"/>
        </classes>
    </test>

    <test name="Chrome Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="tests.HomePageTests"/>
            <class name="tests.ProductsPageTests"/>
        </classes>
    </test>

    <test name="Edge Tests" preserve-order="true">
        <parameter name="browser" value="edge"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="tests.HomePageTests"/>
            <class name="tests.ProductsPageTests"/>
        </classes>
    </test>
</suite>